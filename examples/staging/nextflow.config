plugins {
    id 'nf-ospool@0.1.0'
}

process {
    executor = 'ospool'
}

executor {
    $ospool {
        submitFileDir = "${HOME}/.nextflow/ospool-submit"
        
        // Automatically stage directories not accessible from compute nodes
        autoStageDirectories = [
            "${HOME}/project",     // Your project directory
            "${HOME}/scripts",     // Script directory
            "/home"                // Home directories
        ]
        
        // Optional: Path mappings for bind mounts in containers
        pathMappings = [
            '/mnt/htc-cephfs/fuse/root/staging': '/staging'
        ]
    }
}

workDir = '/staging/groups/YOUR_GROUP/nextflow-work'
